{
  "manifest_version": 2,

  "name": "GitHub Pull Request Statuses",
  "description": "Approve or reject pull requests.",
  "version": "1.1",

  "permissions": [
    "https://www.exceptionsjs.com/*"
  ],
  "icons": {
    "128": "codeducky_partial_logo_128x128.png"
  },
  "content_scripts" : [{
    "matches" : [
      "https://github.com/*/pull*",
      "https://github.com/*/issues*"
    ],
    "js": [ "jquery-1.11.1.min.js", "lodash.js", "angular.js", "GitHubPullRequestStatus.js" ]
  }]
}
